# ECR repository for student enrollment Laravel API
resource "aws_ecr_repository" "student_enrollment_api" {
  name                 = var.repository_name
  image_tag_mutability = var.image_tag_mutability

  image_scanning_configuration {
    scan_on_push = var.scan_on_push
  }

  encryption_configuration {
    encryption_type = var.encryption_type
  }

  tags = var.default_tags
}

# Lifecycle policy to manage image retention
resource "aws_ecr_lifecycle_policy" "student_enrollment_api_lifecycle" {
  repository = aws_ecr_repository.student_enrollment_api.name

  policy = jsonencode({
    rules = [
      {
        rulePriority = 1
        description  = "Keep last ${var.max_image_count} images"
        selection = {
          tagStatus     = "any"
          countType     = "imageCountMoreThan"
          countNumber   = var.max_image_count
        }
        action = {
          type = "expire"
        }
      }
    ]
  })
}

